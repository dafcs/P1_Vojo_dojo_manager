{% extends 'base.jinja' %}

{% block content %}

<header>
<header class="main-header">
    <ul>
        <li class="header-button"><a href="/">Home</a></li>
        <li class="header-button"><a href="/members">Members</a></li>
        <li class="header-button"><a href="/lessons/add">Add Leson</a></li>
    </ul>
</header>

{% for member in members %}

    <div class="member-list-area">
        <ul>
            <li class="member-list-unit"> 
            <p> Name: {{member.first_name}} {{member.last_name}}</p>
            <div class="button-container">
                    <form action="/member/{{member.id}}"><button class="form-button">Edit</button></form>
                    <form action="/member/{{member.id}}/delete" method="post"><button class="form-button">Remove</button></form>
                </li>
            </div>
        </ul>
    </div>
  {% endfor %}

