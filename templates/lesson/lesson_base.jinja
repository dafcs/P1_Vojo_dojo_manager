{% extends 'base.jinja' %}

{% block content %}

<header>
<header class="main-header">
    <ul>
        <li class="header-button"><a href="/">Home</a></li>
        <li class="header-button"><a href="/members">Members</a></li>
        <li class="header-button"><a href="/lesson_form">Add Lesson</a></li>
    </ul>
</header>

{% for lesson in lessons %}

    <div class="member-list-area">
        <ul>
            <li class="member-list-unit"> 
            <p> Lesson: {{lesson.name}}</p>
            <div class="button-container">
                    <form action="/lesson/{{lesson.id}}"><button class="form-button">Edit</button></form>
                    <form action="/lesson/{{lesson.id}}/delete" method="post"><button class="form-button">Remove</button></form>
                </li>
            </div>
        </ul>
    </div>
  {% endfor %}

{% endblock %}