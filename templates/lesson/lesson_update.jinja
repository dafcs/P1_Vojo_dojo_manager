{% extends 'base.jinja' %}

{% block content %}

<nav class="nav-area">
    <ul class="nav-list">
        <li class="nav-button"><a href="/">Home</a></li>
        <li class="nav-button"><a href="/members">Members</a></li>
        <li class="nav-button"><a href="/lessons">Lessons</a></li>
        <li class="nav-button"><a href="/enroll">Enroll</a></li>
    </ul>
</nav>

<h1>Update lesson</h1>

<form action="/lesson/{{lesson.id}}/update" method="post">
    <div class="form-styling">
<p> Current lesson: {{lesson.name}}</p>
  <div>
    <label for="lesson_name">Lesson:</label>
      <select id="lesson_name" name="lesson_name" required>
        <option value="" selected></option>
        <option value="open hour">Open Hour</option>
        <option value="judo">Judo</option>
        <option value="taekwondo">Taekwondo</option>
        <option value="jiu jitsu">jiu jitsu</option>
        <option value="karate">Karate</option>
        <option value="mma">Mixed Martia Arts</option>
        <option value="Body Combat">Body Combat</option>
      </select>
  </div>
</div>
  <button type="submit">Update</button>

</form>
{% endblock %}